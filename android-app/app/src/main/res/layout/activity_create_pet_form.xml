<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    tools:context=".ui.create.CreatePetFormActivity">

    <!-- Top App Bar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/pet_orange"
        android:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/ic_arrow_back"
        app:navigationIconTint="@color/white"
        app:titleCentered="true"
        app:titleTextColor="@color/white"
        tools:title="æ–°å¢žç‹—ç‹—" />

    <!-- Progress indicator -->
    <com.google.android.material.progressindicator.LinearProgressIndicator
        android:id="@+id/progressIndicator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:trackColor="@color/pet_orange_light"
        app:indicatorColor="@color/pet_orange_dark" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toTopOf="@id/btnSubmit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/progressIndicator">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Pet Icon Header -->
            <LinearLayout
                android:id="@+id/headerSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_marginBottom="24dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/iconContainer"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    app:cardBackgroundColor="@color/pet_cream"
                    app:cardCornerRadius="40dp"
                    app:cardElevation="4dp">

                    <TextView
                        android:id="@+id/tvPetIcon"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:textSize="40sp"
                        tools:text="ðŸ¶" />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/tvFormTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:textColor="@color/pet_gray_dark"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    tools:text="å¡«å¯«ç‹—ç‹—è³‡æ–™" />
            </LinearLayout>

            <!-- Basic Info Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:text="@string/section_basic_info"
                android:textColor="@color/pet_orange"
                android:textSize="14sp"
                android:textStyle="bold" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Pet Name -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilName"
                        style="@style/Widget.PetCare.TextInputLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/pet_name_required"
                        app:errorEnabled="true">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="text"
                            android:maxLength="100" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Age -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilAge"
                        style="@style/Widget.PetCare.TextInputLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:hint="@string/pet_age_hint"
                        app:suffixText="@string/years_old">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etAge"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:maxLength="2" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Breed -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilBreed"
                        style="@style/Widget.PetCare.TextInputLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:hint="@string/pet_breed">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etBreed"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="text"
                            android:maxLength="100" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Gender -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="@string/gender"
                        android:textColor="@color/pet_gray_dark"
                        android:textSize="14sp" />

                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/chipGroupGender"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        app:singleSelection="true">

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipMale"
                            style="@style/Widget.MaterialComponents.Chip.Choice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/male"
                            app:chipBackgroundColor="@color/chip_background_selector"
                            app:checkedIconVisible="true" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipFemale"
                            style="@style/Widget.MaterialComponents.Chip.Choice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/female"
                            app:chipBackgroundColor="@color/chip_background_selector"
                            app:checkedIconVisible="true" />
                    </com.google.android.material.chip.ChipGroup>

                    <!-- Neutered -->
                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switchNeutered"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="@string/is_neutered"
                        android:textColor="@color/pet_gray_dark"
                        app:thumbTint="@color/switch_thumb_selector"
                        app:trackTint="@color/switch_track_selector" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Owner Info Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:text="@string/section_owner_info"
                android:textColor="@color/pet_orange"
                android:textSize="14sp"
                android:textStyle="bold" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Owner Name -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilOwnerName"
                        style="@style/Widget.PetCare.TextInputLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/owner_name_required"
                        app:errorEnabled="true">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etOwnerName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textPersonName"
                            android:maxLength="100" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Owner Phone -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilOwnerPhone"
                        style="@style/Widget.PetCare.TextInputLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:hint="@string/owner_phone_required"
                        app:errorEnabled="true">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etOwnerPhone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="phone"
                            android:maxLength="20" />
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Health Info Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:text="@string/section_health_info"
                android:textColor="@color/pet_orange"
                android:textSize="14sp"
                android:textStyle="bold" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Vaccine Status -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilVaccineStatus"
                        style="@style/Widget.PetCare.TextInputLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/vaccine_status">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etVaccineStatus"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="text" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Special Needs -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilSpecialNeeds"
                        style="@style/Widget.PetCare.TextInputLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:hint="@string/special_needs"
                        app:counterEnabled="true"
                        app:counterMaxLength="500">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etSpecialNeeds"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textMultiLine"
                            android:maxLength="500"
                            android:minLines="3" />
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Dog Specific Section -->
            <LinearLayout
                android:id="@+id/dogSpecificSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                tools:visibility="visible">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:text="@string/section_dog_specific"
                    android:textColor="@color/pet_orange"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <!-- Dog Size -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/dog_size"
                            android:textColor="@color/pet_gray_dark"
                            android:textSize="14sp" />

                        <com.google.android.material.chip.ChipGroup
                            android:id="@+id/chipGroupSize"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            app:singleSelection="true"
                            app:selectionRequired="false">

                            <com.google.android.material.chip.Chip
                                android:id="@+id/chipSizeSmall"
                                style="@style/Widget.MaterialComponents.Chip.Choice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/size_small"
                                app:chipBackgroundColor="@color/chip_background_selector" />

                            <com.google.android.material.chip.Chip
                                android:id="@+id/chipSizeMedium"
                                style="@style/Widget.MaterialComponents.Chip.Choice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/size_medium"
                                app:chipBackgroundColor="@color/chip_background_selector" />

                            <com.google.android.material.chip.Chip
                                android:id="@+id/chipSizeLarge"
                                style="@style/Widget.MaterialComponents.Chip.Choice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/size_large"
                                app:chipBackgroundColor="@color/chip_background_selector" />

                            <com.google.android.material.chip.Chip
                                android:id="@+id/chipSizeGiant"
                                style="@style/Widget.MaterialComponents.Chip.Choice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/size_giant"
                                app:chipBackgroundColor="@color/chip_background_selector" />
                        </com.google.android.material.chip.ChipGroup>

                        <!-- Training Level -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:text="@string/training_level"
                            android:textColor="@color/pet_gray_dark"
                            android:textSize="14sp" />

                        <com.google.android.material.chip.ChipGroup
                            android:id="@+id/chipGroupTraining"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            app:singleSelection="true"
                            app:selectionRequired="false">

                            <com.google.android.material.chip.Chip
                                android:id="@+id/chipTrainingNone"
                                style="@style/Widget.MaterialComponents.Chip.Choice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/training_none"
                                app:chipBackgroundColor="@color/chip_background_selector" />

                            <com.google.android.material.chip.Chip
                                android:id="@+id/chipTrainingBasic"
                                style="@style/Widget.MaterialComponents.Chip.Choice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/training_basic"
                                app:chipBackgroundColor="@color/chip_background_selector" />

                            <com.google.android.material.chip.Chip
                                android:id="@+id/chipTrainingIntermediate"
                                style="@style/Widget.MaterialComponents.Chip.Choice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/training_intermediate"
                                app:chipBackgroundColor="@color/chip_background_selector" />

                            <com.google.android.material.chip.Chip
                                android:id="@+id/chipTrainingAdvanced"
                                style="@style/Widget.MaterialComponents.Chip.Choice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/training_advanced"
                                app:chipBackgroundColor="@color/chip_background_selector" />
                        </com.google.android.material.chip.ChipGroup>

                        <!-- Walk Required -->
                        <com.google.android.material.switchmaterial.SwitchMaterial
                            android:id="@+id/switchWalkRequired"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:text="@string/walk_required"
                            android:textColor="@color/pet_gray_dark"
                            app:thumbTint="@color/switch_thumb_selector"
                            app:trackTint="@color/switch_track_selector" />

                        <!-- Walk Frequency -->
                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/tilWalkFrequency"
                            style="@style/Widget.PetCare.TextInputLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:hint="@string/walk_frequency"
                            app:suffixText="@string/times_per_day">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/etWalkFrequency"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="number"
                                android:maxLength="2" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <!-- Friendly With -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:text="@string/friendly_with"
                            android:textColor="@color/pet_gray_dark"
                            android:textSize="14sp" />

                        <com.google.android.material.switchmaterial.SwitchMaterial
                            android:id="@+id/switchFriendlyDogs"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="@string/friendly_with_dogs"
                            android:textColor="@color/pet_gray_dark"
                            app:thumbTint="@color/switch_thumb_selector"
                            app:trackTint="@color/switch_track_selector" />

                        <com.google.android.material.switchmaterial.SwitchMaterial
                            android:id="@+id/switchFriendlyPeople"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/friendly_with_people"
                            android:textColor="@color/pet_gray_dark"
                            app:thumbTint="@color/switch_thumb_selector"
                            app:trackTint="@color/switch_track_selector" />

                        <com.google.android.material.switchmaterial.SwitchMaterial
                            android:id="@+id/switchFriendlyChildren"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/friendly_with_children"
                            android:textColor="@color/pet_gray_dark"
                            app:thumbTint="@color/switch_thumb_selector"
                            app:trackTint="@color/switch_track_selector" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>

            <!-- Cat Specific Section -->
            <LinearLayout
                android:id="@+id/catSpecificSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:text="@string/section_cat_specific"
                    android:textColor="@color/pet_green"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <!-- Indoor Cat -->
                        <com.google.android.material.switchmaterial.SwitchMaterial
                            android:id="@+id/switchIndoor"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/is_indoor"
                            android:textColor="@color/pet_gray_dark"
                            app:thumbTint="@color/switch_thumb_selector"
                            app:trackTint="@color/switch_track_selector" />

                        <!-- Litter Box Type -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:text="@string/litter_box_type"
                            android:textColor="@color/pet_gray_dark"
                            android:textSize="14sp" />

                        <com.google.android.material.chip.ChipGroup
                            android:id="@+id/chipGroupLitterBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            app:singleSelection="true"
                            app:selectionRequired="false">

                            <com.google.android.material.chip.Chip
                                android:id="@+id/chipLitterOpen"
                                style="@style/Widget.MaterialComponents.Chip.Choice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/litter_open"
                                app:chipBackgroundColor="@color/chip_background_selector" />

                            <com.google.android.material.chip.Chip
                                android:id="@+id/chipLitterCovered"
                                style="@style/Widget.MaterialComponents.Chip.Choice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/litter_covered"
                                app:chipBackgroundColor="@color/chip_background_selector" />

                            <com.google.android.material.chip.Chip
                                android:id="@+id/chipLitterAutomatic"
                                style="@style/Widget.MaterialComponents.Chip.Choice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/litter_automatic"
                                app:chipBackgroundColor="@color/chip_background_selector" />

                            <com.google.android.material.chip.Chip
                                android:id="@+id/chipLitterTopEntry"
                                style="@style/Widget.MaterialComponents.Chip.Choice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/litter_top_entry"
                                app:chipBackgroundColor="@color/chip_background_selector" />
                        </com.google.android.material.chip.ChipGroup>

                        <!-- Scratching Habit -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:text="@string/scratching_habit"
                            android:textColor="@color/pet_gray_dark"
                            android:textSize="14sp" />

                        <com.google.android.material.chip.ChipGroup
                            android:id="@+id/chipGroupScratching"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            app:singleSelection="true"
                            app:selectionRequired="false">

                            <com.google.android.material.chip.Chip
                                android:id="@+id/chipScratchLow"
                                style="@style/Widget.MaterialComponents.Chip.Choice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/scratch_low"
                                app:chipBackgroundColor="@color/chip_background_selector" />

                            <com.google.android.material.chip.Chip
                                android:id="@+id/chipScratchModerate"
                                style="@style/Widget.MaterialComponents.Chip.Choice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/scratch_moderate"
                                app:chipBackgroundColor="@color/chip_background_selector" />

                            <com.google.android.material.chip.Chip
                                android:id="@+id/chipScratchHigh"
                                style="@style/Widget.MaterialComponents.Chip.Choice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/scratch_high"
                                app:chipBackgroundColor="@color/chip_background_selector" />
                        </com.google.android.material.chip.ChipGroup>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>

            <!-- Bottom spacing -->
            <View
                android:layout_width="match_parent"
                android:layout_height="16dp" />
        </LinearLayout>
    </ScrollView>

    <!-- Submit Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSubmit"
