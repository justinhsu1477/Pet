<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.PetCare" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary Colors - Warm Orange -->
        <item name="colorPrimary">@color/pet_orange</item>
        <item name="colorPrimaryVariant">@color/pet_orange_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        
        <!-- Secondary Colors - Fresh Green -->
        <item name="colorSecondary">@color/pet_green</item>
        <item name="colorSecondaryVariant">@color/pet_green_dark</item>
        <item name="colorOnSecondary">@color/white</item>
        
        <!-- Background & Surface -->
        <item name="android:colorBackground">@color/background_light</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurface">@color/pet_gray_dark</item>
        
        <!-- Status Bar -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:windowLightStatusBar">false</item>
        
        <!-- Text Input Layout Style -->
        <item name="textInputStyle">@style/Widget.PetCare.TextInputLayout</item>
        
        <!-- Button Style -->
        <item name="materialButtonStyle">@style/Widget.PetCare.Button</item>
    </style>
    
    <!-- Custom TextInputLayout Style -->
    <style name="Widget.PetCare.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/pet_orange</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="hintTextColor">@color/pet_orange</item>
        <item name="endIconTint">@color/pet_orange</item>
    </style>
    
    <!-- Custom Button Style -->
    <style name="Widget.PetCare.Button" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">16dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="elevation">4dp</item>
    </style>

    <!-- Custom Toolbar Style -->
    <style name="Widget.PetCare.Toolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="android:background">@color/pet_orange</item>
        <item name="titleTextColor">@color/white</item>
        <item name="subtitleTextColor">@color/white</item>
        <item name="navigationIconTint">@color/white</item>
        <item name="titleCentered">true</item>
        <item name="android:elevation">4dp</item>
    </style>

    <!-- Toolbar Style for Surface (Light Background) -->
    <style name="Widget.PetCare.Toolbar.Surface" parent="Widget.MaterialComponents.Toolbar.Surface">
        <item name="android:background">@color/surface</item>
        <item name="titleTextColor">@color/pet_gray_dark</item>
        <item name="subtitleTextColor">@color/pet_gray</item>
        <item name="navigationIconTint">@color/pet_gray_dark</item>
        <item name="titleCentered">true</item>
        <item name="android:elevation">2dp</item>
    </style>

    <!-- Back Button Style - Circular with Ripple -->
    <style name="Widget.PetCare.BackButton" parent="">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@drawable/bg_back_button</item>
        <item name="android:src">@drawable/ic_arrow_back</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:padding">8dp</item>
        <item name="android:contentDescription">@string/back</item>
    </style>

    <style name="Widget.PetCare.Chip" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/pet_orange_light</item>
        <item name="rippleColor">@color/pet_orange</item>
        <item name="android:textColor">@color/pet_gray_dark</item>
    </style>
</resources>
